@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Luval.UrlShortner.ShortName
@{

    ViewData["Title"] = "Create Short Url";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div id="alertbanner" class="alert alert-success alert-dismissible fade show" role="alert" style="display: none">
            <span id="alertmessage">Succesfully saved</span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>
<div class="row" id="create-code">
    <div class="col">
        <div>
            <div class="form-group">
                <label for="IdText">Short Code</label>
                <input type="text" class="form-control" id="IdText" name="Id" value="@Html.Raw(Luval.Common.CodeGenerator.GetCode())">
            </div>
            <div class="form-group">
                <label for="UrlId">Url</label>
                <div class="input-group">
                    <input id="UrlId" name="OriginalUri" type="url" class="form-control" placeholder="https://my-very-long-and-complex-url.com" aria-label="https://my-very-long-and-complex-url.com" aria-describedby="paste-button">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="paste-button">Paste</button>
                    </div>
                </div>
            </div>
            <button id="create-button" type="button" class="btn btn-primary">Create</button>
        </div>
    </div>
</div>
<div class="row" id="show-code">
    <div class="col">
        <div class="form-group">
            <label for="ResultUrl" class="sr-only">Short Url</label>
            <input type="text" class="form-control" id="ResultUrl">
        </div>
        <button id="copy-clipboard" type="button" class="btn btn-success">Copy To Clipboard</button>
        <button id="create-new" type="button" class="btn btn-primary">Create new</button>
    </div>
</div>

@section Scripts {
    <script src="~/lib/luval.shortner/shortner.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            shortner.init();
        });
    </script>
}